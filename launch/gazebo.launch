<launch>

  <!-- The world argument (defaults to empty.world) -->
  <arg name="world" default="$(find my_gazebo_worlds)/worlds/empty.world" />

  <!-- Other arguments (such as "-g" for no GUI) can be included here -->
  <arg name="args" default="" />

  <!-- Set this to true in the parameter server to tell everyone to use simulated time. -->
  <param name="/use_sim_time" value="true" />

  <!-- Start a gazebo node from the gazebo package using the gazebo executable, which takes the
       world file as its only argument.  Don't respawn gazebo if we close it, and send all logging
       info to the screen. -->
  <node
    name="gazebo"
    pkg="gazebo"
    type="gazebo"
    args="$(arg args) $(arg world)"
    respawn="false"
    output="screen"
  />

</launch>
