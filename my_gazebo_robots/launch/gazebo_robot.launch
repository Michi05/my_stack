<launch>

  <!-- Required general arguments -->
  <arg name="robot_name"        /> <!-- Robot name for gazebo model -->
  <arg name="robot_description" /> <!-- File with robot description -->
  <arg name="robot_format"      /> <!-- File format should be "urdf" or "gazebo" -->

  <!-- Optional position arguments -->
  <arg name="x"     default="0" />
  <arg name="y"     default="0" />
  <arg name="z"     default="0" />
  <arg name="roll"  default="0" />
  <arg name="pitch" default="0" />
  <arg name="yaw"   default="0" />

  <!-- Upload robot description -->
  <param name="robot_description" command="$(find xacro)/xacro.py '$(arg robot_description)'" />

  <!-- Spawn robot -->
  <node
    name="$(anon spawn_model)"
    pkg="my_gazebo_robots"
    type="my_spawn_model"
    args="-x $(arg x) -y $(arg y) -z $(arg z) -R $(arg roll) -P $(arg pitch) -Y $(arg yaw) -param robot_description -model $(arg robot_name) -$(arg robot_format)"
    respawn="false"
    output="screen"
  />

</launch>
